{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "target": "ES2020",

    // ðŸ‘‡ ESSA Ã‰ A COMBINAÃ‡ÃƒO CERTA
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "lib": ["ES2020"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "types": ["node"],

    "sourceMap": true,
    "declaration": false,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
