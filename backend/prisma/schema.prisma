// ---------------------------------------------------------
//  Datasource & Generator
// ---------------------------------------------------------
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATA_BASE_URL")
}

// ---------------------------------------------------------
//  MODELS â€” POS SYSTEM (Multi-Store / Multi-Tenant)
//  ðŸ”’ ISOLAMENTO TOTAL POR EMPRESA
// ---------------------------------------------------------

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  password  String
  name      String
  phone     String?
  active    Boolean  @default(true)
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userType String  // 'owner' | 'operator'
  role     String? // 'cashier' | 'manager' | 'supervisor'

  companyId String  @db.ObjectId
  company   Company @relation(fields: [companyId], references: [id])

  storeId String? @db.ObjectId
  store   Store?  @relation(fields: [storeId], references: [id])

  sessions Session[]
  sales    Sale[]
  cashiers Cashier[]

  @@unique([email, companyId])
  @@index([companyId])
  @@index([companyId, userType])
  @@index([companyId, active])
  @@index([storeId])
}

model Session {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  userAgent String?
  ipAddress String?

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])

  companyId String @db.ObjectId

  @@index([userId])
  @@index([companyId])
  @@index([companyId, expiresAt])
  @@index([token, companyId])
}

model Company {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  cnpj      String?  @unique
  phone     String?
  email     String?
  address   String?
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  stores         Store[]
  users          User[]
  products       Product[]
  categories     Category[]
  customers      Customer[]
  sales          Sale[]
  cashiers       Cashier[]
  financialItems Financial[]
  permissions    Permission[]

  @@index([status])
}

model Store {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  cnpj      String?
  phone     String?
  email     String?
  address   String?
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  companyId String  @db.ObjectId
  company   Company @relation(fields: [companyId], references: [id])

  users    User[]
  cashiers Cashier[]
  sales    Sale[]
  products Product[]

  @@index([companyId])
  @@index([companyId, status])
}

model Category {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  companyId String  @db.ObjectId
  company   Company @relation(fields: [companyId], references: [id])

  products Product[]

  @@index([companyId])
  @@index([companyId, name])
  @@index([companyId, active])
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  costPrice   Float?
  salePrice   Float
  barcode     String?
  active      Boolean  @default(true)
  quantity    Int      @default(0)
  minStock    Int?
  location    String?
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  categoryId     String?   @db.ObjectId
  category       Category? @relation(fields: [categoryId], references: [id])
  categoryName   String?
  categoryActive Boolean   @default(true)

  companyId String  @db.ObjectId
  company   Company @relation(fields: [companyId], references: [id])

  storeId String @db.ObjectId
  store   Store  @relation(fields: [storeId], references: [id])

  saleItems SaleItem[]

  @@index([companyId])
  @@index([companyId, active])
  @@index([companyId, storeId])
  @@index([companyId, categoryId])
  @@index([companyId, barcode])
  @@index([storeId])
}

model Cashier {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  openingAmount Float
  closingAmount Float?
  openedAt      DateTime  @default(now())
  closedAt      DateTime?
  status        String    // 'open' | 'closed'

  companyId String  @db.ObjectId
  company   Company @relation(fields: [companyId], references: [id])

  storeId String @db.ObjectId
  store   Store  @relation(fields: [storeId], references: [id])

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])

  @@index([companyId])
  @@index([companyId, status])
  @@index([companyId, storeId])
  @@index([storeId])
  @@index([userId])
}

model Sale {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  date          DateTime @default(now())
  total         Float
  discount      Float    @default(0)
  paymentMethod String
  status        String   @default("completed")

  companyId String  @db.ObjectId
  company   Company @relation(fields: [companyId], references: [id])

  storeId String @db.ObjectId
  store   Store  @relation(fields: [storeId], references: [id])

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])

  customerId String?   @db.ObjectId
  customer   Customer? @relation(fields: [customerId], references: [id])

  items SaleItem[]

  @@index([companyId])
  @@index([companyId, date])
  @@index([companyId, status])
  @@index([companyId, storeId])
  @@index([storeId])
  @@index([userId])
  @@index([customerId])
}

model SaleItem {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  quantity  Int
  unitPrice Float
  subtotal  Float

  saleId String @db.ObjectId
  sale   Sale   @relation(fields: [saleId], references: [id])

  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id])

  @@index([saleId])
  @@index([productId])
}

model Customer {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String?
  phone     String?
  cpf       String?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  companyId String  @db.ObjectId
  company   Company @relation(fields: [companyId], references: [id])

  sales Sale[]

  @@unique([cpf, companyId])
  @@index([companyId])
  @@index([companyId, phone])
  @@index([companyId, active])
}

model Financial {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  type        String   // 'income' | 'expense'
  category    String
  amount      Float
  date        DateTime @default(now())
  description String?

  companyId String  @db.ObjectId
  company   Company @relation(fields: [companyId], references: [id])

  @@index([companyId])
  @@index([companyId, type])
  @@index([companyId, date])
  @@index([companyId, category])
}

model Permission {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  role        String
  module      String
  canView     Boolean @default(false)
  canCreate   Boolean @default(false)
  canEdit     Boolean @default(false)
  canDelete   Boolean @default(false)
  description String?

  companyId String  @db.ObjectId
  company   Company @relation(fields: [companyId], references: [id])

  @@unique([role, module, companyId])
  @@index([companyId])
  @@index([companyId, role])
  @@index([role])
  @@index([module])
}