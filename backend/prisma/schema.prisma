// ---------------------------------------------------------
//  Datasource & Generator
// ---------------------------------------------------------
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ---------------------------------------------------------
//  MODELS — POS SYSTEM (Multi-Store / Multi-Tenant)
// ---------------------------------------------------------

model User {
  id        String   @id @default(auto()) @db.ObjectId @map("_id")
  email     String
  password  String
  name      String
  phone     String?
  active    Boolean  @default(true)
  avatar    String?  // caminho/URL da foto do usuário
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userType  String   // 'owner' | 'operator'
  role      String?  // 'cashier' | 'manager' | 'supervisor' | etc.

  companyId String   @db.ObjectId
  company   Company  @relation(fields: [companyId], references: [id])

  storeId   String?  @db.ObjectId
  store     Store?   @relation(fields: [storeId], references: [id])

  sessions Session[]
  sales    Sale[]
  cashiers Cashier[]

  @@unique([email, companyId])
  @@index([userType])
  @@index([companyId])
  @@index([storeId])
}

model Session {
  id        String    @id @default(auto()) @db.ObjectId @map("_id")
  token     String    @unique
  userId    String    @db.ObjectId
  user      User      @relation(fields: [userId], references: [id])
  expiresAt DateTime
  createdAt DateTime @default(now())
  userAgent String?
  ipAddress String?

  @@index([userId])
  @@index([expiresAt])
}

model Company {
  id        String   @id @default(auto()) @db.ObjectId @map("_id")
  name      String
  cnpj      String?  @unique
  phone     String?
  email     String?
  address   String?
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  stores         Store[]
  users          User[]
  financialItems Financial[]

  @@index([status])
}

model Store {
  id        String   @id @default(auto()) @db.ObjectId @map("_id")
  name      String
  cnpj      String?
  phone     String?
  email     String?
  address   String?
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  companyId String   @db.ObjectId
  company   Company  @relation(fields: [companyId], references: [id])

  users    User[]
  cashiers Cashier[]
  sales    Sale[]
  products Product[]

  @@index([companyId])
  @@index([status])
}

model Category {
  id          String   @id @default(auto()) @db.ObjectId @map("_id")
  name        String
  description String?
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())

  products Product[]

  @@index([name])
}

model Product {
  id          String   @id @default(auto()) @db.ObjectId @map("_id")
  name        String
  description String?
  costPrice   Float?      
  salePrice   Float       
  barcode     String?     
  active      Boolean  @default(true)
  quantity    Int      @default(0)
  minStock    Int?
  location    String?
  image       String?  // caminho/URL da imagem do produto
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  categoryId String?   @db.ObjectId
  category   Category? @relation(fields: [categoryId], references: [id])

  storeId String   @db.ObjectId
  store   Store    @relation(fields: [storeId], references: [id])

  saleItems SaleItem[]

  @@index([categoryId])
  @@index([active])
  @@index([storeId])
}

model Cashier {
  id            String    @id @default(auto()) @db.ObjectId @map("_id")
  storeId       String    @db.ObjectId
  userId        String    @db.ObjectId
  openingAmount Float
  closingAmount Float?
  openedAt      DateTime  @default(now())
  closedAt      DateTime?
  status        String    // 'open' | 'closed'

  store Store @relation(fields: [storeId], references: [id])
  user  User  @relation(fields: [userId], references: [id])

  @@index([storeId])
  @@index([userId])
  @@index([status])
}

model Sale {
  id            String   @id @default(auto()) @db.ObjectId @map("_id")
  date          DateTime @default(now())
  total         Float
  discount      Float    @default(0)
  paymentMethod String
  status        String   @default("completed") 

  userId     String   @db.ObjectId
  storeId    String   @db.ObjectId
  customerId String?  @db.ObjectId

  user     User      @relation(fields: [userId], references: [id])
  store    Store     @relation(fields: [storeId], references: [id])
  customer Customer? @relation(fields: [customerId], references: [id])

  items SaleItem[]

  @@index([userId])
  @@index([storeId])
  @@index([customerId])
  @@index([date])
  @@index([status])
}

model SaleItem {
  id        String @id @default(auto()) @db.ObjectId @map("_id")
  quantity  Int
  unitPrice Float
  subtotal  Float

  saleId    String @db.ObjectId
  productId String @db.ObjectId

  sale    Sale    @relation(fields: [saleId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@index([saleId])
  @@index([productId])
}

model Customer {
  id        String   @id @default(auto()) @db.ObjectId @map("_id")
  name      String
  email     String?
  phone     String?
  cpf       String?  @unique
  active    Boolean  @default(true)
  createdAt DateTime @default(now())

  sales Sale[]

  @@index([phone])
}

model Financial {
  id          String   @id @default(auto()) @db.ObjectId @map("_id")
  type        String
  category    String
  amount      Float
  date        DateTime @default(now())
  description String?

  companyId String  @db.ObjectId
  company   Company @relation(fields: [companyId], references: [id])

  @@index([companyId])
  @@index([type])
  @@index([date])
}

model Permission {
  id          String   @id @default(auto()) @db.ObjectId @map("_id")
  role        String
  module      String
  canView     Boolean  @default(false)
  canCreate   Boolean  @default(false)
  canEdit     Boolean  @default(false)
  canDelete   Boolean  @default(false)
  description String?

  @@unique([role, module], map: "role_module")
  @@index([role])
  @@index([module])
}
